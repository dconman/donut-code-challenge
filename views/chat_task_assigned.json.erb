[
    {
        "type": "context",
        "elements": [
            {
                "type": "mrkdwn",
                "text": <%= ":clipboard: <@#{assigner_user_id}> has assigned you the following:".to_json %>
            }
        ]
    },
    {
        "type": "section",
        "block_id": "<%= Tasks::TASK_DESCRIPTION_BLOCK_ID %>",
        "text": {
            "type": "plain_text",
            "text": <%= task_description.to_json %>,
            "emoji": true
        }
    },
    {
        "type": "actions",
        "elements": [
            {
                "type": "button",
                "text": {
                    "type": "plain_text",
                    "text": ":white_check_mark: Complete",
                    "emoji": true
                },
                "style": "primary",
                "value": <%= assigner_user_id.to_json %>,
                "action_id": "<%= Tasks::COMPLETE_TASK_ACTION_ID %>"
            }
        ]
    }
]